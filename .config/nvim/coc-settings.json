{
    "diagnostic.checkCurrentLine": true,

    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=99",
        "--extend-ignore=D301"
    ],
    "python.analysis.typeCheckingMode": "off",

    "git.addGBlameToVirtualText": true,

    "markdownlint.config": {
        "MD013": {
            "code_blocks": false
        }
    }
}
